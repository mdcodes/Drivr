<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.mdrahorat4563.drivr.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="308dp"
            android:layout_height="347dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="38dp" />


        <Button
            android:id="@+id/button_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Dislike"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="442dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="112dp" />

        <Button
            android:id="@+id/button_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="442dp"
            android:layout_marginRight="22dp"
            android:layout_marginEnd="22dp"
            android:layout_alignBaseline="@+id/button_dislike"
            android:layout_alignBottom="@+id/button_dislike"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"></Button>
    </RelativeLayout>
</LinearLayout>