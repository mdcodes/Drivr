<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mdrahorat4563.drivr.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_popup_menu"
                android:contentDescription="@string/descr_overflow_button"
                android:onClick="showPopup"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageButton" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="308dp"
            android:layout_height="347dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="70dp"
            android:contentDescription=""
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/button_like"
            style="@style/LikeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="28dp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="442dp"
            android:background="@mipmap/heart"/>


        <ImageButton
            android:id="@+id/button_dislike"
            style="@style/DislikeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/button_like"
            android:layout_alignBottom="@+id/button_like"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="442dp"
            android:background="@mipmap/x"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Drivr"
            android:textSize="50dp" />
    </RelativeLayout>
</RelativeLayout>