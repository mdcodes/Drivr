<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mdrahorat4563.drivr.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="308dp"
            android:layout_height="347dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="70dp"
            android:contentDescription=""
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/button_like"
            style="@style/LikeButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="28dp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="442dp" />


        <Button
            android:id="@+id/button_dislike"
            style="@style/DislikeButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_like"
            android:layout_alignBottom="@+id/button_like"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            tools:layout_editor_absoluteX="262dp"
            tools:layout_editor_absoluteY="442dp" />
    </RelativeLayout>
</LinearLayout>